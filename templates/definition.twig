<div class="wp-block-capitainewp-definition">
  <header class="wp-block-capitainewp-definition__header">
    {% if definition.lesson and definition.lesson != currentLesson %}
    	<a href="{{ function( 'get_permalink' , definition.lesson) }}" target="_blank" class="wp-block-capitainewp-definition__button button button--main">Cours dédié</a>
    {% endif %}
    <div class="wp-block-capitainewp-definition__icon"><span class="dashicons dashicons-book-alt"></span></div>
    <p class="wp-block-capitainewp-definition__title">{{definition.post_title}}</p>
    <p class="wp-block-capitainewp-definition__type">Définition</p>
  </header>
  <div class="wp-block-capitainewp-definition__content">
    <div class="wp-block-capitainewp-definition__desc">{{definition.description}}</div>
  </div>
  {% if definition.translation or definition.abbreviation %}
  <div class="wp-block-capitainewp-definition__meta">
    {% if definition.translation %}
    <p>Traduction : <strong>{{definition.translation}}</strong></p>
    {% endif %}
    {% if definition.abbreviation %}
    <p>Abréviation : <strong>{{definition.abbreviation}}</strong></p>
    {% endif %}
  </div>
  {% endif %}
</div>
